mixin searchTextField(search)
    form(id = 'form-search')
        .input-group 
            input(
                type = 'text'
                class = 'form-control'
                placeholder = 'Search...'
                name = 'search'
                value = search
            )
            .input-group-append 
                button(
                    class = 'btn btn-success'
                    type = 'submit'
                ) Search
